#+alias org.eolang.math.nan
#+alias org.eolang.math.number
+alias org.eolang.collections.list
+alias org.eolang.nop
+alias org.eolang.try
+alias org.eolang.math.negative-infinity
+alias org.eolang.math.positive-infinity
+alias org.eolang.math.series
+alias org.eolang.hamcrest.assert-that
+home https://github.com/objectionary/eo-math
+junit
+package org.eolang.math
+version 0.0.0

[] > max-of-empty-array
  assert-that > @
    try
      []
        (series *).max > @
      [e]
        e > @
      nop
    $.equal-to "Can't get max of empty array"

[] > min-of-empty-array
  assert-that > @
    try
      []
        (series *).min > @
      [e]
        e > @
      nop
    $.equal-to "Can't get min of empty array"

[] > max-of-one-item-array
  * > xs
    42
  assert-that > @
    series xs
    .max
    $.equal-to 42

[] > min-of-one-item-array
  * > xs
    42
  assert-that > @
    series xs
    .min
    $.equal-to 42

[] > max-of-array-is-first
  * > xs
    25
    12
    -2
  assert-that > @
    series xs
    .max
    $.equal-to 25

[] > max-of-array-is-in-the-center
  * > xs
    12
    25
    -2
  assert-that > @
    series xs
    .max
    $.equal-to 25

[] > max-of-array-is-last
  * > xs
    -2
    5
    22
  assert-that > @
    series xs
    .max
    $.equal-to 22

[] > min-of-array-is-first
  * > xs
    4
    12
    10
  assert-that > @
    series xs
    .min
    $.equal-to 4

[] > min-of-array-is-in-the-center
  * > xs
    24
    3
    10
  assert-that > @
    series xs
    .min
    $.equal-to 3

[] > min-of-array-is-last
  * > xs
    12
    5
    negative-infinity
  assert-that > @
    series xs
    .min
    $.equal-to 2

[] > max-ready
  * positive-infinity > arr
  list arr > self-as-list!

  reduced. > r
    self-as-list
    self-as-list.at 0
    [max item]
      if. > @
        item.gt max
        item
        max

  assert-that > @
    r
    $.equal-to positive-infinity

[] > try-inf
  assert-that > @
    try
      []
        positive-infinity > @
      [e]
        e > @
      nop
    $.equal-to positive-infinity

[] > max-of-array-of-ints-and-floats
  * > xs
    1
    2.5
    4.2
    2
  assert-that > @
    series xs
    .max
    $.equal-to 4.2

[] > max-of-array-of-multiple-values-without-nan
  * 1 positive-infinity > xs
  assert-that > @
    series xs
    .max
    $.equal-to positive-infinity

[] > max-of-array-with-non-number
  * > xs
    10
    "Hello"
    negative-infinity
    []
  assert-that > @
    series xs
    .max
    $.equal-to 1
